#include "header.h"


/**
 * @brief	UART 0 interrupt handler using ring buffers
 * @return	Nothing
 */
void UART0_IRQHandler(void)
{

		if(Chip_UART_ReadLineStatus(LPC_UART0) & UART_LSR_RDR) {

			rxbuff[ii] = Board_UARTGetChar(LPC_UART0);
			ii++;
			flag_rx=1;
		}
}
